Attribute VB_Name = "poslZaznam"
Sub tlacitko_posl_zaznam()
Attribute tlacitko_posl_zaznam.VB_ProcData.VB_Invoke_Func = " \n14"
'
' function for going to the last row / last book
'

If ActiveSheet.Name = "Knihy_L'uboš" Or ActiveSheet.Name = "Knihy_Žanetka" Then
    ActiveSheet.Range("N2499").Select 'select last row
    Selection.End(xlUp).offset(1, 0).Select          'then go up to the nearest value and go one row down
End If
If ActiveSheet.Name = "LP" Then
    ActiveSheet.Range("B499").Select
    Selection.End(xlUp).offset(1, 0).Select
End If
End Sub
 "N4:N2500"
Global Const ILUSTRATOR_COLUMN As String = "L3:L3500"
Global Const STYLE_BOLD As String = "A4:A2500,N4:N2500"
Global Const STYLE_WEBDINGS As String = "X4:Y2500,AE4:AE2500"
