Attribute VB_Name = "postup"
Option Explicit

Sub InitProgressBar()

With Progress
    .Bar.Width = 0
    .Text.Caption = "0% hotové"
    .Show vbModeless
End With

End Sub

Sub progressBar(CurrentProgress As Integer)

Progress.Bar.Width = Progress.Border.Width * CurrentProgress * 0.01
Progress.Text.Caption = CurrentProgress & "% hotové"

DoEvents

End Sub
